<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btn_click_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击申请获取相机权限"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_click_test_start_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击跳转打开测试页面"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_click_permission"
        />

    <Button
        android:id="@+id/btn_click_test_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击拍照"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_click_test_start_result"
        />

</androidx.constraintlayout.widget.ConstraintLayout>